<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wambu.expensemanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity android:name=".DisplayTransaction" />
        <activity
            android:name=".Dashboard"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddIncome"
            android:label="@string/app_name" />
        <activity
            android:name=".AddExpense"
            android:label="Expense Manager" />

        <activity android:name=".GenerateReports"
            android:label="Generate Reports"/>

    </application>

</manifest>